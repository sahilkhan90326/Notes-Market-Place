        <div class="container">
            @{IPagedList<NoteMarketPlace.Models.MyProgressNotes> details = ViewBag.Profiledetails;
                string dpPath = "";
                string firstname = "";
                string lastname = "";
                string email = "";
                DateTime? dateofbirth = DateTime.MinValue;
                string phoneNo = "";
                string uni = "";
                string add1 = "";
                string add2 = "";
                string city = "";
                string state = "";
                string country = "";
                string zipcode = "";

            }
            @foreach (var i in details)
            {
                dpPath = i.userprofile.ProfilePic;
                firstname = i.userprofile.FirstName;
                lastname = i.userprofile.LastName;
                email = i.userprofile.EmailID;
                dateofbirth = i.userprofile.DOB;
                phoneNo = i.userprofile.PhoneCountryCode + i.userprofile.PhoneNumber;
                uni = i.userprofile.University;
                add1 = i.userprofile.AddressLine1;
                add2 = i.userprofile.AddressLine2;
                city = i.userprofile.City;
                state = i.userprofile.State;
                country = i.country.CountryName;
                zipcode = i.userprofile.ZipCode;
            }
            <div class="content-box-lg with-bottom-border">
                <p class="box-heading">Member Details</p>
                <div class="row no-gutters member-details-wrapper">

                    <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12">
                        <div class="member-photo">
                            <img src="@Url.Content(dpPath)" alt="">
                        </div>
                    </div>

                    <div class="col-xl-10 col-lg-10 col-md-12 col-sm-12 col-12">
                        <div class="row no-gutters">
                            @if (ViewBag.Profiledetails.Count > 0)
                            {
                                foreach (var i in details)
                                {
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                        <div class="member-personal-details-wrapper">
                                            <div class="row no-gutters">
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                                                    <div class="member-single-detail-left-wrapper">
                                                        <p class="member-single-detail-left">First Name: </p>
                                                        <p class="member-single-detail-left">Last Name:</p>
                                                        <p class="member-single-detail-left">Email:</p>
                                                        <p class="member-single-detail-left">DOB:</p>
                                                        <p class="member-single-detail-left">Phone Number:</p>
                                                        <p class="member-single-detail-left">College/University:</p>
                                                    </div>
                                                </div>

                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                                                    <div class="member-single-detail-right-wrapper">
                                                        <p class="member-single-detail-right">@firstname</p>
                                                        <p class="member-single-detail-right">@lastname</p>
                                                        <p class="member-single-detail-right">@email</p>
                                                        <p class="member-single-detail-right">@dateofbirth</p>
                                                        <p class="member-single-detail-right">@phoneNo  </p>
                                                        <p class="member-single-detail-right">@uni</p>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }

                            @if (ViewBag.Profiledetails.Count > 0)
                            {
                                foreach (var i in details)
                                {

                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                        <div class="member-address-wrapper">
                                            <div class="row no-gutters">
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                                                    <div class="member-single-detail-left-wrapper">
                                                        <p class="member-single-detail-left">Address 1:</p>
                                                        <p class="member-single-detail-left">Address 2:</p>
                                                        <p class="member-single-detail-left">City:</p>
                                                        <p class="member-single-detail-left">State:</p>
                                                        <p class="member-single-detail-left">Country:</p>
                                                        <p class="member-single-detail-left">Zip Code:</p>
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                                                    <div class="member-single-detail-right-wrapper">
                                                        <p class="member-single-detail-right">@add1</p>
                                                        <p class="member-single-detail-right">@add2</p>
                                                        <p class="member-single-detail-right">@city</p>
                                                        <p class="member-single-detail-right">@state</p>
                                                        <p class="member-single-detail-right">@country</p>
                                                        <p class="member-single-detail-right">@zipcode</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- member details box -->
        <!-- manage-administrator table -->
        <div class="content-box-lg">

            <div class="container">
                <div class="row no-gutters">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left">
                        <p class="box-heading">Notes</p>
                    </div>
                </div>
            </div>

            <div class="container">
                @{IPagedList<NoteMarketPlace.Models.MyProgressNotes> ndetails = ViewBag.NoteDetails;
                    int s = 0;
                }


                <div class="member-notes-table general-table-responsive">
                    <div class="table-responsive-xl">

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center">sr no.</th>
                                    <th scope="col">Note Title</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" class="text-center">Downloaded Notes</th>
                                    <th scope="col" class="text-center">Total Earnings</th>
                                    <th scope="col">Date Added</th>
                                    <th scope="col">Published Date</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.NoteDetailsCount > 0)
                                {
                                    foreach (var i in ndetails)
                                    {
                                        s++;
                                        <tr>
                                            <td class="text-center">@s</td>
                                            <td class="purple-td">@i.SellerNotes.NotesTitle</td>
                                            <td>@i.Category.CategoryName</td>
                                            <td>@i.Status.Status</td>
                                            <td class="text-center">@i.SellerNotes.Downloads.Where(x => x.NoteID == i.SellerNotes.NoteID && x.IsAttachmentDownloaded == true && x.AttachmentPath != null).Count()</td>
                                            <td class="text-center">$@i.SellerNotes.Downloads.Where(x => x.NoteID == i.SellerNotes.NoteID && x.IsSellerHasAllowedDownload == true && x.AttachmentPath != null).Select(x => x.PurchasedPrice).Sum()</td>
                                            <td>@i.SellerNotes.CreatedDate</td>
                                            <td>@i.SellerNotes.NotesPublishedDateTime</td>
                                            <td class="text-center visible-overflow-for-dropdown">
                                                <div class="dropdown dropdown-dots-table">
                                                    <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <img class="dots-in-table" src="~/Content/Admin/images/Dashboard/dots.png" alt="edit">
                                                    </a>

                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                        <a class="dropdown-item" href="#">Download Notes</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9">
                                            <center>No Record Found!</center>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>

            </div>

        </div>
        <!-- published note table -->
        <!-- pagination -->
        <div class="pagination-section">
            <div class="pagination-notes">
                <div class="pagination-number">
                    @Html.PagedListPager(details, page => Url.Action("memberDetails", new
               {
                   page,
                   Search = Request.QueryString["mSearch"]
                   // SortOrder = Request.QueryString["SortOrder"]
               })
           , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, MaximumPageNumbersToDisplay = 5 }
           )
                </div>
             </div>
            </div>
                    <!-- pagination -->
                    <!-- Footer  -->
                    <footer>
                        <div class="container">
                            <div class="row no-gutters">

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-4 col-12 text-left">
                                    <p class="version-footer">Version : 1.1.24</p>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-8 col-12 text-right">
                                    <p class="copyright-footer">Copyright &copy; TatvaSoft All Rights Reserved.</p>
                                </div>

                            </div>
                        </div>
                    </footer>
                    <!-- Footer Ends -->

    </section>


