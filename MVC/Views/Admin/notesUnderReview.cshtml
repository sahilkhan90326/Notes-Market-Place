        @{
            IPagedList<NoteMarketPlace.Models.MyProgressNotes> underReviewNotes = ViewBag.notesUnderReview;
            int s = 0;
        }
        .
        <!-- Header ends -->
        <!-- Thanks popup -->
        <!-- Modal -->
        @using (Html.BeginForm("RejectNotes", "Admin", FormMethod.Post))
        {

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <img src="~/Content/Admin/images/notes-detail/close.png" alt="">
                            </button>
                        </div>
                        <div class="modal-body">
                            @if (ViewBag.notesUnderReviewCount > 0)
                            {
                                foreach (var i in underReviewNotes)
                                {
                                    <input type="hidden" value="@i.SellerNotes.NoteID" name="noteid" />


                                    <p class="note-name-reject-popup">@i.SellerNotes.NotesTitle - @i.Category.CategoryName</p>


                                    <div class="form-group">
                                        <label class="info-label" for="comment-questions">Remarks</label>
                                        @Html.TextAreaFor(x => x.Remarks, new { @class = "form-control input-box-style", id = "adm-remark", placeholder = "Write remarks" })
                                        <div class="incorrect-password-label">
                                            <p>
                                                @Html.ValidationMessage("AdminRemarks", new { style = "color:red" })
                                            </p>
                                        </div>
                                    </div>

                                    <div class="reject-popup-btns">
                                        <div class="row no-gutters">
                                            <button type="submit" class="btn action-btn-in-table" id="reject-btn">Reject</button>
                                            <button class="btn action-btn-in-table" id="cancel-btn" class="close" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>


                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Thanks popup -->
       
                @using (Html.BeginForm("ConfirmApproval", "Admin", FormMethod.Get))
                {
                    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <img src="~/Content/Admin/images/notes-detail/close.png" alt="">
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @if(ViewBag.notesUnderReviewCount > 0)
                                    {
                                        foreach (var i in underReviewNotes)
                                        {
                                            <p class="note-name-reject-popup">If you approve the notes - System will publish the notes over portal. Please press yes to continue, </p>



                                            <input type="hidden" value="@i.SellerNotes.NoteID" name="noteid" />


                                            <div class="reject-popup-btns">
                                                <div class="row no-gutters">
                                                    <button type="submit" class="btn action-btn-in-table" id="reject-btn">Yes</button>

                                                    <button class="btn action-btn-in-table" id="cancel-btn" class="close" data-dismiss="modal">No</button>
                                                </div>
                                            </div>
                                        }

                                    }
                                    </div>
                            </div>
                        </div>
                    </div>
                }
            
            <!-- Thanks popup -->
            <!-- Thanks popup -->
                   @using (Html.BeginForm("InReview", "Admin", FormMethod.Get))
                    {
                    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <img src="~/Content/Admin/images/notes-detail/close.png" alt="">
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @if (ViewBag.notesUnderReviewCount > 0)
                                    {
                                        foreach (var i in underReviewNotes)
                                        {

                                            <p class="note-name-reject-popup">Via marking the note in Review- System will let user know that review process has been initiated. Please press yes to continue. </p>

                                            <input type="hidden" value="@i.SellerNotes.NoteID" name="noteid" />

                                            <div class="reject-popup-btns">
                                                <div class="row no-gutters">
                                                    <button type="submit" class="btn action-btn-in-table" id="reject-btn">Yes</button>

                                                    <button class="btn action-btn-in-table" id="cancel-btn" class="close" data-dismiss="modal">No</button>
                                                </div>
                                            </div>
                                        }
                                    }

                                    </div>
                            </div>
                        </div>
                    </div>
                    
                }
            
                <!-- Thanks popup -->

                <div class="content-box-lg">
                    @using (Html.BeginForm("notesUnderReview", "Admin", FormMethod.Get, new { @Id = "searchForm" }))
                    {
                        <div class="container">
                            <div class="row no-gutters">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left box-heading-wrapper">
                                    <p class="box-heading">Notes Under Review</p>
                                </div>

                                <div class="col-lg-3 col-md-3 col-sm-3 col-12 text-left">

                                    <div class="form-group">
                                        <label for="" class="info-label">Seller</label>
                                        @Html.DropDownListFor(x => x.sellerid, new SelectList(ViewBag.seller, "Value", "Text"), "Select Seller", new { @class = "form-control input-box-style", id = "exampleFormContlect1", @onchange = "searchNote()" })

                                        <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/Admin/images/Dashboard/down-arrow.png" alt="eye"></div>
                                    </div>
                                </div>

                                <div class="col-lg-9 col-md-9 col-sm-9 col-12">

                                    <div class="row no-gutters general-search-bar-btn-wrapper">
                                        <div class="form-group has-search-bar">
                                            <span class="search-symbol"><img src="~/Content/Admin/images/Dashboard/search-icon.png" alt=""></span>
                                            <input type="text" class="form-control input-box-style search-notes-bar" id="example" name="uSearch" placeholder="Search">
                                        </div>

                                        <button type="submit" class="btn btn-general btn-purple general-search-bar-btn">Search</button>
                                    </div>
                                </div>

                            </div>

                        </div>
                    }
                </div>

                <div class="container">

                    <div class="notes-under-review-table general-table-responsive">
                        <div class="table-responsive-xl">

                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-center">Sr no.</th>
                                        <th scope="col">Note title</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Seller</th>
                                        <th scope="col"></th>
                                        <th scope="col">Date Added</th>
                                        <th scope="col">status</th>
                                        <th scope="col" class="text-center">action</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.notesUnderReviewCount > 0)
                                    {
                                        foreach (var i in underReviewNotes)
                                        {
                                            s++;
                                            <tr>
                                                <td class="text-center">@s</td>
                                                <td class="purple-td">@i.SellerNotes.NotesTitle </td>
                                                <td>@i.Category.CategoryName</td>
                                                <td>@i.u.FirstName @i.u.LastName</td>
                                                <td class="text-center">
                                                    <img class="eye-img-in-table" src="~/Content/Admin/images/Dashboard/eye.png" alt="edit">
                                                </td>
                                                <td>@i.SellerNotes.CreatedDate</td>
                                                <td>@i.Status.Status</td>
                                                <td>
                                                    <button class="btn action-btn-in-table" id="approve-btn" data-toggle="modal" data-target="#exampleModal1">Approve</button>
                                                    <button class="btn action-btn-in-table" id="reject-btn" data-toggle="modal" data-target="#exampleModal">Reject</button>
                                                    <button class="btn action-btn-in-table" id="inreview-btn" data-toggle="modal" data-target="#exampleModal2">InReview</button>
                                                </td>
                                                <td class="text-center visible-overflow-for-dropdown">
                                                    <div class="dropdown dropdown-dots-table">
                                                        <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <img class="dots-in-table" src="~/Content/Admin/images/Dashboard/dots.png" alt="edit">
                                                        </a>

                                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">


                                                            <a href="~/Admin/noteDetails/@i.SellerNotes.NoteID" class="dropdown-item">View More Details</a>

                                                            <a href="~/Admin/DownloadFile/@i.SellerNotes.NoteID" class="dropdown-item">Download Notes</a>


                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="9">
                                                <center>No Record Found!</center>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>

                </div>
                <!-- published note table -->
                <!-- pagination -->
                <div class="pagination-section">
                    <div class="pagination-notes">
                        <div class="pagination-number">
                            @Html.PagedListPager(underReviewNotes, page => Url.Action("notesUnderReview", new
                       {
                           page,
                           Search = Request.QueryString["uSearch"]
                           // SortOrder = Request.QueryString["SortOrder"]
                       })
                   , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, MaximumPageNumbersToDisplay = 5 }
                   )
                        </div>
                    </div>
                </div>
                <!-- pagination -->
                <!-- Footer  -->
                <footer>
                    <div class="container">
                        <div class="row no-gutters">

                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-4 col-12 text-left">
                                <p class="version-footer">Version : 1.1.24</p>
                            </div>

                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-8 col-12 text-right">
                                <p class="copyright-footer">Copyright &copy; TatvaSoft All Rights Reserved.</p>
                            </div>

                        </div>
                    </div>
                </footer>
                <!-- Footer Ends -->

            </section>


