@model NoteMarketPlace.Models.signUp
<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Important Meta Tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Title -->
    <title>Signup - Notes MarketPlace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/User/images/logo/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/Content/User/css/font-awesome/css/fontawesome.min.css">

    <!-- FontAwesome kit -->
    <script src="https://kit.fontawesome.com/4fa77e6d3c.js" crossorigin="anonymous"></script>

    <!-- Bootstrap css -->
    <link rel="stylesheet" href="~/Content/User/css/bootstrap/bootstrap.min.css">

    <!-- Custom css -->
    <link rel="stylesheet" href="~/Content/User/css/style.css">

    <!-- Responsive css -->
    <link rel="stylesheet" href="~/Content/User/css/responsive.css">

</head>

<body>

    <!-- Background Image -->
    <img class="library-img" src="~/Content/User/images/login/banner-with-overlay.jpg" alt="Library">

    <!-- Signup Box -->
    <section id="signup">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <div class="main-logo">
                        <a href="~/User/home"><img class="img-fluid" src="~/Content/User/images/login/top-logo.png" alt="Notes MarketPlace Logo"></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="signup-box">
                        <p class="section-heading text-center">Create An Account</p>
                        <p class="user-instruction">Enter your details to signup</p>
                        <div class="success-msg">
                            @Html.Raw(@ViewBag.IsSuccess)
                        </div>
                        <form method="post">
                            <div class="form-group">
                                <label class="info-label" for="su-firstname">First Name *</label>
                                @Html.TextBoxFor(Users => Users.FirstName, new { @class = "form-control input-box-style", id = "su-firstname", placeholder = "Enter your first name" })
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("FirstName", new { @style = "color:red" })
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="info-label" for="su-lastname">Last Name *</label>
                                @Html.TextBoxFor(Users => Users.LastName, new { @class = "form-control input-box-style", id = "su-lastname", placeholder = "Enter your last name" })
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("LastName", new { @style = "color:red" })
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="info-label" for="su-email">Email *</label>
                                @Html.TextBoxFor(Users => Users.EmailId, new { @class = "form-control input-box-style", id = "su-email", placeholder = "Enter your email address" })
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("EmailId", new { @style = "color:red" })
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="info-label" for="su-password">Password</label>
                                @Html.PasswordFor(User => User.Password, new { @class = "form-control input-box-style", id = "su-password", placeholder = "Enter your password", autocomplete = "on" })
                                <div class="eye"><img class="eye-img" src="~/Content/User/images/login/eye.png" alt="eye"></div>
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("Password", new { @style = "color:red" })
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="info-label" for="du-cpassword">Confirm Password</label>
                                @Html.PasswordFor(User => User.RePassword, new { @class = "form-control input-box-style", id = "su-password1", placeholder = "Re-enter your password", autocomplete = "on" })
                                <div class="eye"><img class="eye-img" src="~/Content/User/images/login/eye.png" alt="eye"></div>
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("RePassword", new { @style = "color:red" })
                                    </p>
                                </div>
                            </div>
                            <div class="form-btn">
                                <button type="submit" class="btn btn-general btn-purple">Sign Up</button>
                            </div>
                        </form>
                        <div class="toggle-btw-login-signup text-center">
                            <p>Already have an account? <span><a href="~/User/login">Login</a></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- JQuery -->
    <script src="~/Scripts/User/js/jquery.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/User/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/User/js/script.js"></script>


</body>

</html>