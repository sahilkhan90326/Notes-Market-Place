        <!-- Header ends -->
        <!-- manage-administrator table -->
        <div class="content-box-lg">
            @{
                IPagedList<NoteMarketPlace.Models.MyProgressNotes> categorydetails = ViewBag.categorymanagement;
                int s = 0;
            }
            <div class="container">
                <form name="f1">
                    <div class="row no-gutters">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left box-heading-wrapper">
                            <p class="box-heading">Manage Category</p>
                        </div>

                        <div class="col-lg-5 col-md-5 col-sm-5 col-12">
                            <a href="~/Admin/addCategory" class="btn btn-general btn-purple add-category-btn">Add Category</a>
                        </div>

                        <div class="col-lg-7 col-md-7 col-sm-7 col-12">

                            <div class="row no-gutters general-search-bar-btn-wrapper">
                                <div class="form-group has-search-bar">
                                    <span class="search-symbol"><img src="~/Content/Admin/images/Dashboard/search-icon.png" alt=""></span>
                                    <form id="f2">
                                        <input type="text" class="form-control input-box-style search-notes-bar" id="example" name="cSearch" placeholder="Search">
                                </div>

                                <button class="btn btn-general btn-purple general-search-bar-btn" value="Search" name="submit">Search</button>
                </form>
            </div>

        </div>
        </div>
        </form>
        </div>
        <!-- Report popup -->
        @using (Html.BeginForm("deleteCategory", "Admin", FormMethod.Get))
        {
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <img src="~/Content/User/images/notes-detail/close.png" alt="">
                            </button>
                        </div>
                        <div class="modal-body">

                            <p class="add-review-heading">Are you sure you want to delete the category?</p>

                            @foreach (var i in categorydetails)
                            {
                                <input type="hidden" value="@i.Category.CategoryID" name="categoryid" />
                            }

                            <div class="reject-popup-btns">
                                <div class="row no-gutters">
                                    <button type="submit" class="btn action-btn-in-table" id="reject-btn">Yes</button>

                                    <button class="btn action-btn-in-table" id="cancel-btn" class="close" data-dismiss="modal">No</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Report popup -->


        <div class="container">

            <div class="manage-category-table general-table-responsive">
                <div class="table-responsive-xl">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">sr no.</th>
                                <th scope="col">Category</th>
                                <th scope="col">Description</th>
                                <th scope="col">Date Added</th>
                                <th scope="col">Added By</th>
                                <th scope="col" class="text-center">Active</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.categorymanagementCount > 0)
                            {
                                foreach (var i in categorydetails)
                                {
                                    s++;
                                    <tr>
                                        <td class="text-center">@s</td>
                                        <td>@i.Category.CategoryName</td>
                                        <td>@i.Category.Description</td>
                                        <td>@i.Category.CreatedDate</td>
                                        <td>@i.u.FirstName  @i.u.LastName </td>
                                        @if (@i.Category.IsActive == true)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        <td class="text-center">
                                            <img class="edit-img-in-table" src="~/Content/Admin/images/Dashboard/edit.png" alt="edit">
                                            <img class="delete-img-in-table" src="~/Content/Admin/images/Dashboard/delete.png" alt="edit" data-toggle="modal" data-target="#exampleModal">
                                        </td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7">
                                        <center>No Record Found!</center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>

        </div>
        <!-- published note table -->
        <!-- pagination -->
        <!-- Pagination -->
        <div class="pagination-section">
            <div class="pagination-notes">
                <div class="pagination-number">
                    @Html.PagedListPager(categorydetails, page => Url.Action("categorydetails", new
               {
                   page,
                   Search = Request.QueryString["cSearch"]
                   // SortOrder = Request.QueryString["SortOrder"]
               })
           , new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, MaximumPageNumbersToDisplay = 5 }
           )
                </div>
            </div>
        </div>
        <!-- Pagination -->
        <!-- pagination -->
        <!-- Footer  -->
        <footer>
            <div class="container">
                <div class="row no-gutters">

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-4 col-12 text-left">
                        <p class="version-footer">Version : 1.1.24</p>
                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-8 col-12 text-right">
                        <p class="copyright-footer">Copyright &copy; TatvaSoft All Rights Reserved.</p>
                    </div>

                </div>
            </div>
        </footer>
        <!-- Footer Ends -->

    </section>


